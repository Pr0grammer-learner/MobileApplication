<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Data.DataFragment">

    <ImageView
        android:id="@+id/artist_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/gone_fludd" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist_image"
        android:layout_marginTop="16dp"
        android:text="Gone.Fludd"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/artist_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist_name"
        android:layout_marginTop="8dp"
        android:text="Gone.Fludd - российский рэп-исполнитель, также известный как Данила Поперечный. Он известен своими острыми текстами и неповторимым стилем. Его музыка сочетает в себе различные жанры, такие как хип-хоп, трап и рнб. Gone.Fludd активно выступает с 2016 года и имеет множество поклонников в России и за рубежом."
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>